services:
  rabbitmq:
    image: rabbitmq:{{ rabbitmq_version }}
    container_name: rabbitmq
    network_mode: host
    restart: always     
    environment:
      RABBITMQ_DEFAULT_USER: {{ rabbitmq_user }}
      RABBITMQ_DEFAULT_PASS: {{ rabbitmq_pass }}   
    volumes:
      - {{ rabbitmq_vol_dir }}/data:/var/lib/rabbitmq
